<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ques_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="ffhdffgs"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ques_link"
        android:layout_width="match_parent"
        android:layout_below="@id/ques_title"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="ffhdffgs" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/ques_link"
        android:elevation="4dp"
        android:id="@+id/user_foto"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/user_foto"
        android:gravity="center"
        android:layout_toRightOf="@id/user_foto"
        android:layout_below="@id/ques_link"
        android:orientation="vertical">


        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/user_foto"
            android:layout_below="@id/ques_link"
            android:text="ffhdffgs"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/user_stacklink"
            android:layout_toRightOf="@id/user_foto"
            android:layout_below="@id/user_name"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="ffhdffgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>



</RelativeLayout>